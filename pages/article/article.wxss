.main {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.article {
  width: 650rpx;
  font-size: 18px;
}

.article-title {
  text-align: center;
  display: block;
  font-size: 30px;
}

.article-author {
  text-align: center;
  display: block;
  padding-top: 10px;
  font-size: 14px;
}

.article-text {
  letter-spacing: 5px;
  text-align: center;
  line-height: 17px;
  text-indent: 2em;
}

.article-content.gushici {
  text-align: center;
}

.record-button {
  width: 66px;
  height: 66px;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  display: flex;
  align-items: center;
}

.record-image {
  width: 40px;
  height: 40px;
}

.audioControls {
  width: 100%;
  height: 20px;
  position: absolute;
  bottom: 80px;
  color: white;
  font-size: 6pt;
  line-height: 20px;
  text-align: center;
}

.audioControls .slider {
  width: 520rpx;
  height: 100%;
}

.slider slider {
  width: 95%;
  margin-left: 4%;
  margin-right: 0;
}

.audioControls .time {
  width: 120rpx;
  height: 100%;
  color: black;
  line-height: 36px;
}
